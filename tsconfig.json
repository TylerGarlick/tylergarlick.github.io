{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es6",
      "ES2015",
      "ES2017",
      "ES2018",
      "ES2020"
    ],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules",
    "examples/**/*",
    "docs/**/*",
    "test/**/*"
  ]
}
